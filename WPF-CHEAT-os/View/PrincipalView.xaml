<UserControl x:Class="WPF_CHEAT_os.View.PrincipalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CHEAT_os"
             xmlns:view="clr-namespace:WPF_CHEAT_os.View"
             xmlns:viewModel="clr-namespace:WPF_CHEAT_os.ViewModel"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#2980b9"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1abc9c"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>

        <Menu VerticalAlignment="Top" Background="#3498db" Foreground="White">
            <MenuItem Header="Inicio"  Command="{Binding SelectViewModelCommand}"
                CommandParameter="{Binding DataContext.InicioViewModel, Source={RelativeSource AncestorType=UserControl}}"/>
            <MenuItem Header="Propuestas" Command="{Binding DataContext.SelectViewModelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
          CommandParameter="{Binding DataContext.PropuestaViewModel, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <MenuItem Header="Evaluaciones"  Command="{Binding SelectViewModelCommand}"
                CommandParameter="{Binding DataContext.EvaluacionesViewModel, Source={RelativeSource AncestorType=UserControl}}" />
            <MenuItem Header="Cerrar sesión"  Command="{Binding SelectViewModelCommand}"
                CommandParameter="{Binding DataContext.CerrarSecionViewModel, Source={RelativeSource AncestorType=UserControl}}" />
        </Menu>
        <Grid x:Name="MainContent" VerticalAlignment="Center" HorizontalAlignment="Center">
   
            <TextBlock Text="Bienvenido, Profesor" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</UserControl>
