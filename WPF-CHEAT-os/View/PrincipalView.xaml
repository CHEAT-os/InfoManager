<UserControl x:Class="WPF_CHEAT_os.View.PrincipalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CHEAT_os"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
             xmlns:view="clr-namespace:WPF_CHEAT_os.View" 
             xmlns:viewmodel="clr-namespace:WPF_CHEAT_os.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:PrincipalViewModel}"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid>
        <Grid x:Name="MainContent" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Bienvenido al Gestor de TFG" FontSize="24" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Administra tus trabajos de fin de grado de manera sencilla y eficiente." FontSize="24" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0"/>
        </Grid>
    </Grid>
</UserControl>
